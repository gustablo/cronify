<%= button_to "New Cron Job", new_cron_job_path, method: :get, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                   Name 
                </th>
                <th scope="col" class="px-6 py-3">
                   Expression 
                </th>
                <th scope="col" class="px-6 py-3">
                   Last Run At 
                </th>
                <th scope="col" class="px-6 py-3">
                   Next Run At 
                </th>
                <th scope="col" class="px-6 py-3">
                   Status 
                </th>
                <th scope="col" class="px-6 py-3">
                  Action 
                </th>
            </tr>
        </thead>
        <tbody>
          <% @cron_jobs.each do |cron| %>
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  <%= cron.name %>
                </th>
                <td class="px-6 py-4">
                  <%= cron.expression %> 
                </td>
                <td class="px-6 py-4">
                  <%= cron.last_run_at %>
                </td>
                <td class="px-6 py-4">
                  <%= cron.next_run_at %>
                </td>
                <td class="px-6 py-4">
                  <%= cron.status %>
                </td>
                <td class="px-6 py-4">
                  <%= link_to "Edit Cron Jobs", edit_cron_job_path(cron), class:"font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                  <%= button_to "Disable Cron Job", cron, method: :delete, class:"font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                </td>
            </tr> 
          <% end %>
        </tbody>
    </table>
</div>
